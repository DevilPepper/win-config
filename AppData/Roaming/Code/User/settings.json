{
  "workbench.startupEditor": "none",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "path": "C:/Program Files/PowerShell/7/pwsh.exe",
    }
  },
  "terminal.integrated.profiles.linux": {
    "Bash": {
      "path": "/bin/bash",
      "args": [
        "-l"
      ]
    }
  },
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.defaultProfile.linux": "Bash",
  "editor.codeActionsOnSave": {
    "source.fixAll.markdownlint": true
  },
  "editor.fontFamily": "'Cascadia Code', Consolas, 'Courier New', monospace",
  "terminal.integrated.fontSize": 16,
  "editor.fontSize": 16,
  "editor.fontLigatures": true,
  "terminal.integrated.fontFamily": "'CaskaydiaCove NF', 'Cascadia Code', Consolas, 'Courier New', monospace",
  "workbench.colorCustomizations": {
    "terminal.foreground": "#839496",
    // "terminal.background": "#002833",586e75
    "terminal.ansiBlack": "#586e75",
    "terminal.ansiBlue": "#268bd2",
    "terminal.ansiCyan": "#2aa198",
    "terminal.ansiGreen": "#859901",
    "terminal.ansiMagenta": "#d33682",
    "terminal.ansiRed": "#dc322f",
    "terminal.ansiWhite": "#cec9b7",
    "terminal.ansiYellow": "#b58901",
    "terminal.ansiBrightBlack": "#003541",
    "terminal.ansiBrightBlue": "#839496",
    "terminal.ansiBrightCyan": "#93a1a1",
    "terminal.ansiBrightGreen": "#859901",
    "terminal.ansiBrightMagenta": "#6c6ec6",
    "terminal.ansiBrightRed": "#cb4b16",
    "terminal.ansiBrightWhite": "#fdf6e3",
    "terminal.ansiBrightYellow": "#657b83",
    "terminalCursor.foreground": "#839496",
    "terminalCursor.background": "#003541"
  },
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.enablePersistentSessions": false,
  "search.showLineNumbers": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.eol": "\n",
  "C_Cpp.default.compilerArgs": [
    "/std:c++latest"
  ],
  "C_Cpp.clang_format_fallbackStyle": "Google",
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "diffEditor.renderSideBySide": true,
  "dotfiles.repository": "SupaStuff/dotfiles",
  "dotfiles.installCommand": "~/dotfiles/stow.sh",
  "C_Cpp.updateChannel": "Insiders",
  "cmake.configureOnOpen": false,
  "extensions.ignoreRecommendations": true,
  "workbench.panel.opensMaximized": "always",
  "workbench.editor.decorations.badges": false,
  "workbench.editor.decorations.colors": false,
  "window.newWindowDimensions": "inherit",
  "editor.quickSuggestions": {
    "other": "inline",
    "comments": "off",
    "strings": "off"
  },
  "editor.tabSize": 2,
  "redhat.telemetry.enabled": false,
  "workbench.editor.untitled.hint": "hidden",
  "search.useReplacePreview": false,
  "remote.SSH.remotePlatform": {
    "server": "linux"
  },
  "terminal.integrated.tabs.enabled": false,
  "editor.formatOnSave": true,
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "remote.containers.gitCredentialHelperConfigLocation": "none",
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "jupyter.askForKernelRestart": false,
  "cmake.configureOnEdit": false,
  "search.quickOpen.history.filterSortOrder": "recency",
  "search.quickOpen.includeHistory": false,
  "python.analysis.extraPaths": [
    "~/.local/lib/python3.9/site-packages/"
  ],
  "workbench.layoutControl.enabled": false,
}
